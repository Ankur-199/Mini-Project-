<%- include('../partials/header') %>

<div class="mb-4">
    <a href="/travels" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left"></i> Back to All Travels
    </a>
</div>

<h2><i class="bi bi-plus-circle"></i> Add New Travel</h2>

<% if (typeof error !== 'undefined') { %>
    <div class="alert alert-danger">
        <i class="bi bi-exclamation-triangle"></i> <%= error %>
    </div>
<% } %>

<form action="/travels" method="POST" class="mt-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="destination" class="form-label">
                <i class="bi bi-geo-alt"></i> Destination <span class="text-danger">*</span>
            </label>
            <input type="text" class="form-control" id="destination" name="destination" 
                   value="<%= typeof travel !== 'undefined' ? travel.destination : '' %>" required>
        </div>
        <div class="col-md-6 mb-3">
            <label for="status" class="form-label">
                <i class="bi bi-info-circle"></i> Status <span class="text-danger">*</span>
            </label>
            <select class="form-select" id="status" name="status" required>
                <option value="Planning" <%= typeof travel !== 'undefined' && travel.status === 'Planning' ? 'selected' : '' %>>Planning</option>
                <option value="Booked" <%= typeof travel !== 'undefined' && travel.status === 'Booked' ? 'selected' : '' %>>Booked</option>
                <option value="In Progress" <%= typeof travel !== 'undefined' && travel.status === 'In Progress' ? 'selected' : '' %>>In Progress</option>
                <option value="Completed" <%= typeof travel !== 'undefined' && travel.status === 'Completed' ? 'selected' : '' %>>Completed</option>
                <option value="Cancelled" <%= typeof travel !== 'undefined' && travel.status === 'Cancelled' ? 'selected' : '' %>>Cancelled</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">
            <i class="bi bi-card-text"></i> Description <span class="text-danger">*</span>
        </label>
        <textarea class="form-control" id="description" name="description" rows="3" required><%= typeof travel !== 'undefined' ? travel.description : '' %></textarea>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="startDate" class="form-label">
                <i class="bi bi-calendar-event"></i> Start Date <span class="text-danger">*</span>
            </label>
            <input type="date" class="form-control" id="startDate" name="startDate" 
                   value="<%= typeof travel !== 'undefined' && travel.startDate ? new Date(travel.startDate).toISOString().split('T')[0] : '' %>" required>
        </div>
        <div class="col-md-6 mb-3">
            <label for="endDate" class="form-label">
                <i class="bi bi-calendar-check"></i> End Date <span class="text-danger">*</span>
            </label>
            <input type="date" class="form-control" id="endDate" name="endDate" 
                   value="<%= typeof travel !== 'undefined' && travel.endDate ? new Date(travel.endDate).toISOString().split('T')[0] : '' %>" required>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label for="travelers" class="form-label">
                <i class="bi bi-people"></i> Number of Travelers <span class="text-danger">*</span>
            </label>
            <input type="number" class="form-control" id="travelers" name="travelers" 
                   value="<%= typeof travel !== 'undefined' ? travel.travelers : '' %>" min="1" required>
        </div>
        <div class="col-md-6 mb-3">
            <label for="budget" class="form-label">
                <i class="bi bi-currency-dollar"></i> Budget <span class="text-danger">*</span>
            </label>
            <input type="number" class="form-control" id="budget" name="budget" 
                   value="<%= typeof travel !== 'undefined' ? travel.budget : '' %>" min="0" step="0.01" required>
        </div>
    </div>

    <div class="mb-3">
        <label for="notes" class="form-label">
            <i class="bi bi-sticky"></i> Notes
        </label>
        <textarea class="form-control" id="notes" name="notes" rows="3"><%= typeof travel !== 'undefined' && travel.notes ? travel.notes : '' %></textarea>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-circle"></i> Add Travel
        </button>
        <a href="/travels" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </div>
</form>

<%- include('../partials/footer') %>

