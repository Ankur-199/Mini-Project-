<%- include('partials/header') %>

<div class="row mb-4">
    <div class="col-12">
        <div class="jumbotron bg-primary text-white p-5 rounded">
            <h1 class="display-4">
                <i class="bi bi-airplane-fill"></i> Welcome to TravelSmart
            </h1>
            <p class="lead">Manage your travels efficiently and plan your next adventure!</p>
            <% if (isAuthenticated) { %>
                <a class="btn btn-light btn-lg" href="/travels/new">
                    <i class="bi bi-plus-circle"></i> Add New Travel
                </a>
            <% } else { %>
                <div>
                    <a class="btn btn-light btn-lg me-2" href="/auth/signup">
                        <i class="bi bi-person-plus"></i> Sign Up
                    </a>
                    <a class="btn btn-outline-light btn-lg" href="/auth/login">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            <% } %>
        </div>
    </div>
</div>

<% if (isAuthenticated) { %>
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-calendar-check display-1 text-primary"></i>
                    <h3 class="mt-3"><%= totalTravels %></h3>
                    <p class="text-muted">Total Travels</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-airplane-takeoff display-1 text-success"></i>
                    <h3 class="mt-3"><%= upcomingTravels.length %></h3>
                    <p class="text-muted">Upcoming Travels</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center">
                <div class="card-body">
                    <i class="bi bi-map display-1 text-info"></i>
                    <h3 class="mt-3"><%= recentTravels.length %></h3>
                    <p class="text-muted">Recent Travels</p>
                </div>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body text-center">
                    <h3><i class="bi bi-info-circle text-primary"></i> Get Started</h3>
                    <p class="lead">Sign up or login to start managing your travels!</p>
                    <a href="/auth/signup" class="btn btn-primary me-2">
                        <i class="bi bi-person-plus"></i> Create Account
                    </a>
                    <a href="/auth/login" class="btn btn-outline-primary">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>
            </div>
        </div>
    </div>
<% } %>

<% if (isAuthenticated) { %>
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5><i class="bi bi-calendar-event"></i> Upcoming Travels</h5>
                </div>
                <div class="card-body">
                    <% if (upcomingTravels.length > 0) { %>
                        <ul class="list-group list-group-flush">
                            <% upcomingTravels.forEach(travel => { %>
                                <li class="list-group-item">
                                    <a href="/travels/<%= travel._id %>" class="text-decoration-none">
                                        <strong><%= travel.destination %></strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> <%= new Date(travel.startDate).toLocaleDateString() %>
                                        <span class="badge bg-<%= travel.status === 'Planning' ? 'warning' : travel.status === 'Booked' ? 'info' : 'success' %> ms-2">
                                            <%= travel.status %>
                                        </span>
                                    </small>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted">No upcoming travels. <a href="/travels/new">Add one now!</a></p>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5><i class="bi bi-clock-history"></i> Recent Travels</h5>
                </div>
                <div class="card-body">
                    <% if (recentTravels.length > 0) { %>
                        <ul class="list-group list-group-flush">
                            <% recentTravels.forEach(travel => { %>
                                <li class="list-group-item">
                                    <a href="/travels/<%= travel._id %>" class="text-decoration-none">
                                        <strong><%= travel.destination %></strong>
                                    </a>
                                    <br>
                                    <small class="text-muted">
                                        <i class="bi bi-calendar"></i> <%= new Date(travel.startDate).toLocaleDateString() %>
                                        <span class="badge bg-<%= travel.status === 'Planning' ? 'warning' : travel.status === 'Booked' ? 'info' : travel.status === 'Completed' ? 'success' : 'secondary' %> ms-2">
                                            <%= travel.status %>
                                        </span>
                                    </small>
                                </li>
                            <% }); %>
                        </ul>
                    <% } else { %>
                        <p class="text-muted">No recent travels. <a href="/travels/new">Add one now!</a></p>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
<% } %>

<%- include('partials/footer') %>

